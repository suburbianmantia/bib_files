@article{chevallier-greco_epstein-barr_1989,
	title = {The {Epstein}-{Barr} virus ({EBV}) {DR} enhancer contains two functionally different domains: domain {A} is constitutive and cell specific, domain {B} is transactivated by the {EBV} early protein {R}},
