	pmid = {2154588},
	pmcid = {PMC249210},
	keywords = {Humans, Gene Expression, Cell Line, RNA, Messenger, Transcription, Genetic, Lymphocyte Activation, Transfection, Plasmids, Antigens, CD, Antigens, Viral, Epstein-Barr Virus Nuclear Antigens, Receptors, Complement 3d, Receptors, IgE, Genes, Viral, Herpesvirus 4, Human, Antigens, Differentiation, B-Lymphocyte, B-Lymphocytes, Receptors, Complement, Complement C3d, Enzyme-Linked Immunosorbent Assay, Lymphoma, Receptors, Fc},
